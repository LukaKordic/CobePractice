<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cobeosijek.myapplication.ui.feed.CarListActivity">



    <TextView
        android:id="@id/user_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_user_info_height"
        android:background="@color/colorAccent"
        android:drawableStart="@mipmap/ic_launcher_round"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_user_info_text_size" />

    <android.support.design.widget.TabLayout
        android:id="@id/pager_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/white" />

    <android.support.v4.view.ViewPager
        android:id="@id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</LinearLayout>
