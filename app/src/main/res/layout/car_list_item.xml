<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_car_img"
        android:layout_width="@dimen/car_img_width"
        android:layout_height="wrap_content"
        android:contentDescription="@string/car_image_description" />

    <TextView
        android:id="@+id/tv_car_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_car_img"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_car_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_car_name"
        android:layout_toEndOf="@id/iv_car_img"
        android:textSize="12sp" />

</RelativeLayout>